#!/usr/bin/env bash

if [ $(uname -s) = "Darwin" ]; then
    alias ls='ls --color=auto'
    alias ll='ls -al'
else
    alias open="xdg-open"
fi

for x in bin/ data/ pngs/; do
    if [ ! -d $x ]; then
        mkdir $x
    fi
done

export WD=$(pwd)
alias flake8="flake8 --ignore \"E111,E124,E128,E201,E203,E722\""
