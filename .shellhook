#!/usr/bin/env bash

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls="ls --color=auto"
    alias ll="ls -al"
else
    alias open="xdg-open"
fi

export WD
WD=$(pwd)

for x in bin data out; do
    if [ ! -d "$WD/$x" ]; then
        mkdir "$WD/$x"
    fi
done

lint() {
    echo "$1"
    hlint "$1"
    hindent --indent-size 4 --sort-imports --line-length 78 "$1"
    echo ""
}

export -f lint
alias flake8="flake8 --ignore \"E111,E124,E128,E201,E203,E722\""
